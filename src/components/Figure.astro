---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

type Props = {
  src: string;
  alt: string;
  width: number;
  height: number;
  metadata: ImageMetadata;
};
---

<div style="display: flex; justify-content: center; align-items: center; text-align: center;">
  <figure>
    <Image {...Astro.props} class="rounded-lg" style="display: block; margin-left: auto; margin-right: auto;" />
    <figcaption>
      <slot />
    </figcaption>
  </figure>
</div>
